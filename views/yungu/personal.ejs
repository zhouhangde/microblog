<script type="text/javascript">
    $(".content").on("click",".menu_ul li",function(){
		$(this).siblings().removeClass("tabActive");
		$(this).addClass("tabActive");
		if($(this).text() == "基本资料"){
			$("#baseInfo").css({display:'block'});
			$("#accountInfo").css({display:'none'});
			$("#updatePassword").css({display:'none'});
		}else if($(this).text() == "账户信息"){
			$("#accountInfo").css({display:'block'});
			$("#baseInfo").css({display:'none'});
			$("#updatePassword").css({display:'none'});
		}
		else if($(this).text() == "修改密码"){
			$("#updatePassword").css({display:'block'});
			$("#baseInfo").css({display:'none'});
			$("#accountInfo").css({display:'none'});
		}
	});
</script>