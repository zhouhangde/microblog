<script type="text/javascript">
    $(function(){
		$(".loginDiv").css({margin: ""+($(window).height()-400)/2+"px auto"});
	});
	$("#forgetPassword").click(function(){
		$(".loginTitle").html("忘记密码");
		$(".loginTab").css({display:'none'});
		$(".forgetPasswordTab").css({display:'block'});
		$("#submit").html("完成");
